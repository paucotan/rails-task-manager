<h2>Edit Task</h2>

<%= form_with model: @task, url: task_path(@task), method: :patch do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_area :details %>
  </div>

  <div>
    <%= f.submit "Update Task" %>
  </div>
<% end %>

<%= link_to "Back to tasks", tasks_path %>
